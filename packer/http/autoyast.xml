<?xml version="1.0"?>
<!DOCTYPE profile>
<!-- AutoYaST Configuration for geckoforge Test VM -->
<profile xmlns="http://www.suse.com/1.0/yast2ns" xmlns:config="http://www.suse.com/1.0/configns">
  
  <!-- General -->
  <general>
    <mode>
      <confirm config:type="boolean">false</confirm>
      <forceboot config:type="boolean">true</forceboot>
      <final_reboot config:type="boolean">true</final_reboot>
    </mode>
  </general>
  
  <!-- Keyboard -->
  <keyboard>
    <keymap>english-us</keymap>
  </keyboard>
  
  <!-- Language -->
  <language>
    <language>en_US</language>
    <languages>en_US</languages>
  </language>
  
  <!-- Timezone -->
  <timezone>
    <hwclock>UTC</hwclock>
    <timezone>America/New_York</timezone>
  </timezone>
  
  <!-- Partitioning (Btrfs + snapshots) -->
  <partitioning config:type="list">
    <drive>
      <device>/dev/sda</device>
      <initialize config:type="boolean">true</initialize>
      <use>all</use>
      <partitions config:type="list">
        <partition>
          <mount>/boot/efi</mount>
          <size>512M</size>
          <filesystem config:type="symbol">vfat</filesystem>
        </partition>
        <partition>
          <mount>/</mount>
          <size>max</size>
          <filesystem config:type="symbol">btrfs</filesystem>
        </partition>
      </partitions>
    </drive>
  </partitioning>
  
  <!-- Software (Minimal Selection) -->
  <software>
    <products config:type="list">
      <product>Leap</product>
    </products>
    <!-- Minimal patterns - only essentials -->
    <patterns config:type="list">
      <pattern>base</pattern>
      <pattern>enhanced_base</pattern>
      <pattern>kde</pattern>              <!-- Minimal KDE Plasma -->
      <pattern>x11</pattern>               <!-- X11 display server -->
      <!-- Skip: games, multimedia, office - will install via Flatpak/Home-Manager -->
    </patterns>
    <!-- Essential packages only -->
    <packages config:type="list">
      <package>openssh</package>
      <package>kernel-devel</package>     <!-- Required for VirtualBox Guest Additions -->
      <package>gcc</package>              <!-- Required for builds -->
      <package>make</package>
      <package>git</package>              <!-- Required for geckoforge -->
      <package>snapper</package>          <!-- Btrfs snapshots -->
      <package>curl</package>             <!-- Required for Nix install -->
      <package>xz</package>               <!-- Required for Nix install -->
      <package>bzip2</package>
    </packages>
    <!-- Do NOT install: games, libreoffice, multimedia packages -->
    <!-- These will be added via geckoforge scripts as needed -->
  </software>
  
  <!-- Users -->
  <users config:type="list">
    <user>
      <username>jay</username>
      <user_password>vagrant</user_password>
      <encrypted config:type="boolean">false</encrypted>
      <fullname>Jay Elliott</fullname>
      <gid>100</gid>
      <home>/home/jay</home>
      <shell>/bin/bash</shell>
      <uid>1000</uid>
    </user>
  </users>
  
  <!-- Root user -->
  <rootPassword>
    <password>vagrant</password>
    <encrypted config:type="boolean">false</encrypted>
  </rootPassword>
  
  <!-- Networking -->
  <networking>
    <dhcp_options>
      <dhclient_client_id>AUTO</dhclient_client_id>
    </dhcp_options>
    <interfaces config:type="list">
      <interface>
        <bootproto>dhcp</bootproto>
        <device>eth0</device>
        <startmode>auto</startmode>
      </interface>
    </interfaces>
  </networking>
  
  <!-- Services -->
  <services-manager>
    <default_target>graphical</default_target>
    <services>
      <enable config:type="list">
        <service>sshd</service>
        <service>NetworkManager</service>
      </enable>
    </services>
  </services-manager>
  
  <!-- Firewall -->
  <firewall>
    <enable_firewall config:type="boolean">true</enable_firewall>
    <start_firewall config:type="boolean">true</start_firewall>
    <FW_SERVICES_EXT_TCP>ssh</FW_SERVICES_EXT_TCP>
  </firewall>
  
</profile>
